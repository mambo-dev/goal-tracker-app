// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  user_id       Int      @id @default(autoincrement())
  user_username String   @unique
  user_email    String   @unique
  user_password String
  user_account  Account?
  user_goals    Goal[]
  user_streaks  Streak[]
}

model Account {
  account_id                  Int     @id @default(autoincrement())
  account_user                User    @relation(fields: [account_user_id], references: [user_id], onDelete: Cascade)
  account_user_id             Int     @unique
  account_verified            Boolean @default(false)
  account_verified_code       String  @default(uuid())
  account_two_factor          Boolean @default(false)
  account_two_factor_code     String  @default(uuid())
  account_reset_password_code String  @default(uuid())
}

model Goal {
  goal_id                Int       @id @default(autoincrement())
  goal_user              User      @relation(fields: [goal_user_id], references: [user_id], onDelete: Cascade)
  goal_user_id           Int
  goal_title             String
  goal_user_timeline     DateTime
  goal_type_timeline     DateTime
  goal_previous_timeline DateTime
  goal_achieved          Boolean
  goal_type              Type
  goal_subgoals          SubGoal[]
  goal_streak            Streak[]
}

enum Type {
  daily
  weekly
  monthly
  yearly
}

model SubGoal {
  subgoal_id         Int       @id @default(autoincrement())
  subgoal_goal       Goal      @relation(fields: [subgoal_goal_id], references: [goal_id], onDelete: Cascade)
  subgoal_goal_id    Int
  subgoal_title      String
  subgoal_achieved   Boolean
  subgoal_subgoal    SubGoal?  @relation("SubGoalSubgoals", fields: [subgoal_subgoal_id], references: [subgoal_id])
  subgoal_subgoal_id Int?
  subgoal_subgoals   SubGoal[] @relation("SubGoalSubgoals")
}

model Streak {
  streak_id            Int       @id @default(autoincrement())
  streak_current_count Int       @default(0)
  streak_type          Type
  streak_starttime     DateTime
  streak_endtime       DateTime?
  streak_user          User      @relation(fields: [streak_user_id], references: [user_id], onDelete: Cascade)
  streak_user_id       Int
  streak_goal          Goal      @relation(fields: [streak_goal_id], references: [goal_id], onDelete: Cascade)
  streak_goal_id       Int       @unique
  streak_updated_at    DateTime  @default(now()) @updatedAt
}
